<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaNote</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaNote.styles.css" asp-append-version="true" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    
    

      
  

</head>
<body class="d-flex flex-column min-vh-100">

    <header class="bg-secundary text-white fixed-top" >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SistemaNote</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Notas" asp-action="Create">Inserir/Editar Notas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Notas" asp-action="Index">Listagem</a>
                        </li>
                       
                    

                    </ul>
                </div>

                <div class ="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <div>
                    <ul class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            C# Udemy Exercícios
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "Lógica Recapitulacao" })">Recapitulação Lógica</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "Classes" })">Classes</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "Sobrecarga Encapsulamento" })">Sobrecarga/Encapsulamento</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "Vetores Listas Matrizes" })">Vetores Listas Matrizes</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "Tópicos Especiais" })">Tópicos Especiais DateTime</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "Enumerações Composição" })">Enumerações Composição</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "Herança e Polimorfismo" })">Herança e Polimorfismo</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "Excessões" })">Excessões</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "Arquivos" })">Arquivos</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "Interface" })">Interfaces</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "Interface 2 Contratos" })">Interfaces 2 Contratos</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "ContaBancoClasses" })">Ex. Conta Banco Classes</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "ContaBancoProgram" })">Ex. Conta Banco Program</a>
                                <a class="dropdown-item" href="@Url.Action("Notas", "Home", new { NomeNota = "LerTXT" })">Ler Arquivos de Texto</a>
                         
                        </div>
                    </ul>
                </div>

                <div>
                    <ul class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Notas Variadas
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Notas", new { NomeNota = "Git Hub" })">Git Hub</a>
                           
                        </div>
                    </ul>
                </div>
                    <div>
                        <ul class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Outro Menu
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="@Url.Action("Notas", new { NomeNota = "NomeVar" })">Item</a>

                            </div>
                        </ul>
                    </div>
                    <div>
                        <ul class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Outro Menu
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="@Url.Action("Notas", new { NomeNota = "NomeVar" })">Item</a>

                            </div>
                        </ul>
                    </div>

               </div>

            </div>

        </nav>
    </header>


    <main class="container mt-5 pt-5">
         <div class="container body-content">

               @RenderBody()

         </div>
    </main>
  
           
    <footer class="bg-dark text-white text-center py-3 fixed-bottom">
        <div class="container">
            &copy; 2024 - Sistema para Notação - Desenvolvido por: <a href="mailto:leandrojose2226@gmail.com">leandrojose2226@gmail.com</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
